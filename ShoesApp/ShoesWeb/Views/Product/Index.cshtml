@model IEnumerable<ShoesWeb.Models.Product>
@{
    ViewBag.Title = "Index";
}

<h3 class="text-center text-uppercase">List of Product</h3>
<p>
    @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Product_Id)</th>
            <th>@Html.DisplayNameFor(m => m.Product_Name)</th>
            <th>@Html.DisplayNameFor(m => m.Category_Name)</th>
            <th>@Html.DisplayNameFor(m => m.Store_Name)</th>
            <th>@Html.DisplayNameFor(m => m.Price)</th>
            <th>@Html.DisplayNameFor(m => m.Quantity)</th>
            <th>@Html.DisplayNameFor(m => m.Image)</th>
            <th>Action(s)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
        <tr>
            <td>@emp.Product_Id</td>
            <td>@emp.Product_Name</td>
           
            <td>@emp.Category_Name</td>
            
            <td>@emp.Store_Name</td>
            <td>@emp.Price</td>
            <td>@emp.Quantity</td>
            <td>@emp.Image</td>
            <td>
                @Html.ActionLink("Details", "GetProductById", new { id = emp.Product_Id }, new { @class = "btn btn-info" })
                @Html.ActionLink("Edit", "UpdateProductById", new { id = emp.Product_Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "DeleteProductById", new { id = emp.Product_Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>

        }
    </tbody>
</table>

