@model IEnumerable<ShoesWeb.Models.Product>
@{
    ViewBag.Title = "Index";
}
<link href="https://cdn.datatables.net/1.11.2/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

<h3 class="text-center text-uppercase mt-3">List of Products</h3>
<div class="container-fluid">
    <p>
        @Html.ActionLink("Add New Product", "AddProduct", new { controller = "Product" }, new { hidefocus = "hidefocus", @class = "btn btn-primary" })
    </p>
    <div class="">
        <table id="productTable" class="table table-bordered text-center w-100">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Product_Id)</th>
                    <th>@Html.DisplayNameFor(m => m.Product_Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Category_Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Store_Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Product_Price)</th>
                    <th>@Html.DisplayNameFor(m => m.Product_Quantity)</th>
                    <th>@Html.DisplayNameFor(m => m.Product_Image)</th>
                    <th>Action(s)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Product_Id</td>
                        <td>@product.Product_Name</td>
                        <td>@product.Category_Name</td>
                        <td>@product.Store_Name</td>
                        <td>@product.Product_Price</td>
                        <td>@product.Product_Quantity</td>
                        <td><img src="@Url.Content("/Images/ProductImg/Boots/" + @product.Product_Image)" alt="@product.Product_Image" height="30" width="30" /></td>
                        <td>
                            @Html.ActionLink("Details", "GetProductById", new { id = product.Product_Id }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Edit", "UpdateProductById", new { id = product.Product_Id }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Delete", "DeleteProductById", new { id = product.Product_Id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.11.2/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.2/js/dataTables.bootstrap4.min.js"></script>
<script>
    $('#productTable').DataTable();
</script>

