@model IEnumerable<ShoesWeb.Models.Product>
@{
    ViewBag.Title = "Index";
}
<form>
    <label id="lb_customerid">@Session["Customer_id"]</label>


<h3 class="text-center text-uppercase">List of Products</h3>
<div class="container">
  
    <table class="table table-bordered text-center">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Product_Id)</th>
                <th>@Html.DisplayNameFor(m => m.Product_Name)</th>
                <th>@Html.DisplayNameFor(m => m.Category_Name)</th>
                <th>@Html.DisplayNameFor(m => m.Store_Name)</th>
                <th>@Html.DisplayNameFor(m => m.Product_Price)</th>
                <th>@Html.DisplayNameFor(m => m.Product_Quantity)</th>
                <th>@Html.DisplayNameFor(m => m.Product_Image)</th>
                <th>Action(s)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Product_Id</td>
                    <td>@product.Product_Name</td>
                    <td>@product.Category_Name</td>
                    <td>@product.Store_Name</td>
                    <td>@product.Product_Price</td>
                    <td>@product.Product_Quantity</td>
                    <td><img src="@Url.Content("/Images/ProductImg/" + @product.Product_Image)" alt="@product.Product_Image" height="30" width="30" /></td>
                    <td>
                        @Html.ActionLink("Add To Cart", "AddCart", new { id = product.Product_Id }, new { @class = "btn btn-info" })
                       
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
    </form>
